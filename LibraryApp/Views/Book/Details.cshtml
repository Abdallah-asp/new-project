@model GetBookAndHisFeedBackViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Hi, welcome back!</h4>
            <span>Book Details</span>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Advanced</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Book Details</a></li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="profile card card-body px-3 pt-3 pb-0">
            <div class="profile-head">
                <div class="photo-content">
                    <div class="cover-photo"></div>
                </div>
                <div class="profile-info">
                    <div class="profile-photo">
                        <img src="~/upload/@Model.Book.Image" class="img-fluid rounded-circle" alt="">
                    </div>
                    <div class="profile-details">
                        <div class="profile-name px-3 pt-2">
                            <h4 class="text-primary mb-0">Book name : <b>@Model.Book.Name_en</b></h4>
                            <p>Category name : <b>@Model.Book.Category.Name_en</b></p>
                        </div>
                        <div class="profile-email px-2 pt-2">
                            <h4 class="text-muted mb-0">Publishing House</h4>
                            <p>@Model.Book.Publishing_House.Name_en</p>
                        </div>
                        <div class="dropdown ml-auto">
                            <a href="#" class="btn btn-primary light sharp" data-toggle="dropdown" aria-expanded="true"><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="18px" height="18px" viewBox="0 0 24 24" version="1.1"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><rect x="0" y="0" width="24" height="24"></rect><circle fill="#000000" cx="5" cy="12" r="2"></circle><circle fill="#000000" cx="12" cy="12" r="2"></circle><circle fill="#000000" cx="19" cy="12" r="2"></circle></g></svg></a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <a asp-action="Index">
                                <li class="dropdown-item">
                                    <i class="fa fa-user-circle text-primary mr-2"></i>Back to Book List
                                </li>
                                </a>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <div class="post-details">
                    <h3 class="mb-2 text-black">Short Description for this book</h3>
                    <ul class="mb-4 post-meta d-flex flex-wrap">
                        @foreach (var item in Model.Book.Book_authors)
                        {
                            <li class="post-author mr-3">By @item.User.Name</li>
                        }
                        <li class="post-date mr-3"><i class="fa fa-calender"></i>Published in : @Model.Book.Date_of_publication</li>
                        <li class="post-comment"><i class="fa fa-comments-o"></i>&nbsp; Pages number : 28</li>
                    </ul>
                    <p>@Model.Book.Short_description</p>
                    <div class="profile-skills mt-5 mb-5">
                        <h4 class="text-primary mb-2">Category</h4>
                        <a href="javascript:void()" class="btn btn-primary light btn-xs mb-1">@Model.Book.Category.Name_en</a>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header align-items-center">
                                <div class="card-action card-tabs">
                                    <ul class="nav nav-tabs style-1" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" data-toggle="tab" role="tab" aria-selected="false">
                                                Feed backs
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body message-bx px-0 pt-3">
                                <div class="tab-content dz-scroll height520" id="message-bx">
                                    <div class="tab-pane fade show active" id="AllMessage" role="tabpanel">
                                        @foreach (var item in Model.FeedBacks)
                                        {
                                            <div class="media chat-list-area">
                                                <div class="image-bx mr-sm-4 mr-2">
                                                    <img src="~/upload/@item.User.Image" alt="" class="rounded-circle img-1">
                                                    <span class="active"></span>
                                                </div>
                                                <div class="media-body">
                                                    <div class="d-flex mb-sm-2 mb-0">
                                                        <h6 class="text-black font-w600 fs-16 mb-0">@item.User.Name</h6>
                                                        <span class="ml-auto fs-14">@item.Date</span>
                                                    </div>
                                                    <p class="text-black">@item.Feed_back</p>
                                                </div>
                                            </div>
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
