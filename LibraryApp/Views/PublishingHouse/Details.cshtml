@model PublishingHouseDetailsViewModel 
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h5 class="card-title">name : &nbsp; @Model.Name</h5>
    </div>
    <div class="card-body">
        <p class="card-text">our phone : &nbsp; @Model.Phone</p>
        <p class="card-text">full Address : &nbsp; @Model.Address</p>
        <p class="card-text">email : &nbsp; @Model.Email</p>
        <p class="card-text">city : &nbsp; @Model.City</p>
        <p class="card-text">government : &nbsp; @Model.The_state</p>
    </div>
    <div class="card-footer d-sm-flex justify-content-between align-items-center">
        <div class="card-footer-link mb-4 mb-sm-0">
            <p class="card-text text-dark d-inline"></p>
        </div>

        <a asp-action="Index" class="btn btn-primary">Go Back</a>
    </div>
</div>