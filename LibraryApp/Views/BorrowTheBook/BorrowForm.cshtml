@model SaveBorrowTheBookViewModel
@{
    ViewData["Title"] = "BorrowForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Hi, welcome back!</h4>
            <p class="mb-0">Validation</p>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Form</a></li>
            <li class="breadcrumb-item active">
                @if (Model.Id != 0)
                {
                    <a href="javascript:void(0)">Update Borrow</a>
                }
                else
                {
                    <a href="javascript:void(0)">Add Borrow</a>
                }
            </li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                @if (Model.Id != 0)
                { <h4 class="card-title">Update Borrow</h4> }
                else
                {
                    <h4 class="card-title">Add Borrow</h4>
                }
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" asp-action="Save">
                        <div class="row">
                            <div class="col-xl-6">
                                @if (Model.Id != 0)
                                {
                                    <input type="hidden" asp-for="@Model.Id"/>
                                }
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        Date
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="date" asp-for="Date" class="form-control" placeholder="Enter a username..">
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Date, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        Borrowing period date
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="date" asp-for="Borrowing_period_date" class="form-control" placeholder="Enter a username..">
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Borrowing_period_date, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        Actual return date
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="date" asp-for="Actual_return_date" class="form-control" placeholder="Enter a username..">
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Actual_return_date, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        College
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" asp-for="College_id">
                                            <option value="">select...</option>
                                            @foreach (var item in Model.Colleges)
                                            {
                                                var _selected_college = "";

                                                if (Model.Id > 0)
                                                {
                                                    if (item.Id == Model.College_id) { _selected_college = "selected"; }
                                                }

                                                <option value="@item.Id" _selected_college>@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(c => c.College_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        User
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" asp-for="User_id">
                                            <option value="">select...</option>
                                            @foreach (var item in Model.Users)
                                            {
                                                var _selected_User = "";

                                                if (Model.Id > 0)
                                                {
                                                    if (item.Id == Model.User_id) { _selected_User = "selected"; }
                                                }

                                                <option value="@item.Id" _selected_User>@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(c => c.User_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="val-username">
                                        Book name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" asp-for="Book_id">
                                            <option value="">select...</option>
                                            @foreach (var item in Model.Books)
                                            {
                                                var _selected_Book = "";

                                                if (Model.Id > 0)
                                                {
                                                    if (item.Id == Model.Book_id) { _selected_Book = "selected"; }
                                                }

                                                <option value="@item.Id" _selected_Book>@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Book_id, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-6 ml-auto">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        
        $("select").select2();
        
    </script>
}